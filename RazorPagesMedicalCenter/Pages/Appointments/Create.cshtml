@page
@model RazorPagesMedicalCenter.Pages.Appointments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Appointment.PatientID" class="control-label"></label>
                <select asp-for="Appointment.PatientID" class ="form-control" asp-items="ViewBag.PatientID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.ReferralID" class="control-label"></label>
                <select asp-for="Appointment.ReferralID" class ="form-control" asp-items="ViewBag.ReferralID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.MedProcedureID" class="control-label"></label>
                <input asp-for="Appointment.MedProcedureID" class="form-control" />
                <span asp-validation-for="Appointment.MedProcedureID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.AppointmentPrice" class="control-label"></label>
                <input asp-for="Appointment.AppointmentPrice" class="form-control" />
                <span asp-validation-for="Appointment.AppointmentPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

